
@inject IGameService GameService

<h3>VideoGames</h3>

<table class="table">
    <thead>
        <tr>
            <th>Game</th>
            <th>Developer</th>
            <th>Release</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in GameService.Games)
        {
            <tr>
                <td>@game.Name</td>
                <td>@game.Developer</td>
                <td>@game.Realese?.ToShortDateString()</td>
            </tr>
            
        }
    </tbody>
</table>

@code {

    protected override async Task OnInitializedAsync()
    {
        await GameService.LoadGames();
    }

}
